{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.mk18_reload": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{ "reload_start2": "query.equipped_item_any_tag('slot.weapon.mainhand','ag3d:mk18') == 1 && q.is_powered" }
					]
				},
				"reload_start2": {
					"on_entry": [
						"/clear @s ar:mk18",
						"/clear @s ar:mk18_mag 0 1",
						"/replaceitem entity @s slot.weapon.mainhand 0 ar:mk18_empty 1 0",
						"v.r = q.life_time;"
					],
					"transitions": [
						{ "reloaded2": "(q.life_time - v.r) >= 0.25 && q.get_equipped_item_name(0) == 'mk18_empty'" },
						{ "reload_error": "q.get_equipped_item_name(0) != 'mk18_empty' || !q.is_powered" }
					]
				},
				"reloaded2": {
					"on_entry": [
						"/playsound pixelpoly.mk18_clipout @a ~~~ 1.4"
					],
					"transitions": [
						{ "reload_start3": "1.0" }
					]
				},
				"reload_start3": {
					"on_entry": [
						"v.r = q.life_time;"
					],
					"transitions": [
						{ "reloaded3": "(q.life_time - v.r) >= 0.85 && q.get_equipped_item_name(0) == 'mk18_empty'" },
						{ "reload_error": "q.get_equipped_item_name(0) != 'mk18_empty' || !q.is_powered" }
					]
				},
				"reloaded3": {
					"on_entry": [
						"/playsound pixelpoly.mk18_clipin @a ~~~ 1.4"
					],
					"transitions": [
						{ "reload_start4": "1.0" }
					]
				},
				"reload_start4": {
					"on_entry": [
						"v.r = q.life_time;"
					],
					"transitions": [
						{ "reloaded4": "(q.life_time - v.r) >= 0.65 && q.get_equipped_item_name(0) == 'mk18_empty'" },
						{ "reload_error": "q.get_equipped_item_name(0) != 'mk18_empty' || !q.is_powered" }
					]
				},
				"reloaded4": {
					"on_entry": [
						"/playsound pixelpoly.mk18_boltrelease @a ~~~ 1.4"
					],
					"transitions": [
						{ "reload_start": "1.0" }
					]
				},
				"reload_start": {
					"on_entry": [
						"v.r = q.life_time;"
					],
					"transitions": [
						{ "reloaded": "(q.life_time - v.r) >= 0.9 && q.get_equipped_item_name(0) == 'mk18_empty'" },
						{ "reload_error": "q.get_equipped_item_name(0) != 'mk18_empty' || !q.is_powered" }
					]
				},
				"reloaded": {
					"on_entry": [
						"/tag @s remove reload",
						"/event entity @s trigger:onreload",
						"/scoreboard players set @s mk18 30",
						"/clear @s ar:mk18_empty",
						"/replaceitem entity @s slot.weapon.mainhand 0 ar:mk18"
					],
					"transitions": [
						{ "default": "1.0" }
					]
				},
				"reload_error": {
					"on_entry": [
						"/tag @s remove reload",
						"/event entity @s trigger:onreload",
						"/clear @s ar:mk18_empty",
						"/give @s ar:mk18",
						"/give @s ar:mk18_mag"
					],
					"transitions": [
						{ "default": "1.0" }
					]
				}
			}
		}
	}
}

