{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.awp_bullet_counter": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{ "awp_show": "(q.get_equipped_item_name(0) == 'awp_empty' && (q.scoreboard('awp') == 0)) || (q.get_equipped_item_name(0) == 'awp' && (q.scoreboard('awp') >= 0)) && !q.is_powered" }
					]
				},
				"awp_show": {
					"transitions": [
						{ "default": "(q.get_equipped_item_name(0) == 'awp_empty' && (q.scoreboard('awp') == 0)) || (q.get_equipped_item_name(0) == 'awp' && (q.scoreboard('awp') >= 0)) && !q.is_powered" }
					],
					"on_entry": [ "/function ammo/awp" ]
				}
			}
		}
	}
}

