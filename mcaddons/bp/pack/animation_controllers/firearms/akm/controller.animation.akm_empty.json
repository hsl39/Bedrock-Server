{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.akm_onempty": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{ "akm_empty": "q.get_equipped_item_name(0) == 'akm_empty' && (!q.is_powered && !q.is_ignited) && q.is_using_item" }
					]
				},
				"akm_empty": {
					"on_entry": [
						"/tag @s[hasitem={item=ar:akm_mag}] add reload",
						"/playsound pixelpoly.empty_gun @a[tag=!reload] ~~~ 1.0"
					],
					"transitions": [
						{ "default": "q.get_equipped_item_name(0) != 'akm_empty' || !q.is_using_item" }
					]
				}
			}
		}
	}
}

