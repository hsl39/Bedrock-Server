						"v.r = q.life_time;"
					],
					"transitions": [
						{ "reloaded2": "(q.life_time - v.r) >= 0.25 && q.get_equipped_item_name(0) == 'm249_empty'" },
						{ "reload_error": "q.get_equipped_item_name(0) != 'm249_empty' || !q.is_powered" }
					]
				},
