{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.kittyhungry": {
			"states": {
				"default": {
					"transitions": [
						{
							"hungry": "query.mark_variant == 1"
						}
					]
				},
				"hungry": {
					"transitions": [
						{
							"default": "query.mark_variant != 1"
						}
					],
					"particle_effects": [
						{
							"effect": "hungry",
							"locator": "emoticon"
						}
					]
				}
			}
		},
		"controller.animation.kittyangry": {
			"states": {
				"default": {
					"transitions": [
						{
							"angry": "query.mark_variant == 2"
						}
					]
				},
				"angry": {
					"transitions": [
						{
							"default": "query.mark_variant != 2 "
						}
					],
					"particle_effects": [
						{
							"effect": "angry",
							"locator": "emoticon"
						}
					]
				}
			}
		},
		"controller.animation.kittylove": {
			"states": {
				"default": {
					"transitions": [
						{
							"love": "query.is_in_love"
						}
					]
				},
				"love": {
					"transitions": [
						{
							"default": "!query.is_in_love"
						}
					],
					"particle_effects": [
						{
							"effect": "love",
							"locator": "emoticon"
						}
					]
				}
			}
		},
		"controller.animation.kittypregnant": {
			"states": {
				"default": {
					"transitions": [
						{
							"pregnant": "query.is_pregnant"
						}
					]
				},
				"pregnant": {
					"transitions": [
						{
							"default": "!query.is_pregnant"
						}
					],
					"particle_effects": [
						{
							"effect": "pregnant",
							"locator": "emoticon"
						}
					]
				}
			}
		},
		"controller.animation.kittysleep": {
			"states": {
				"default": {
					"transitions": [
						{
							"sleep": "query.is_riding ? (query.get_ride -> query.owner_identifier) == 'mocreatures:kittybed'"
						}
					]
				},
				"sleep": {
					"particle_effects": [
						{
							"effect": "sleep",
							"locator": "emoticon"
						}
					],
					"transitions": [
						{
							"default": "!query.is_riding"
						}
					]
				}
			}
		}
	}
}