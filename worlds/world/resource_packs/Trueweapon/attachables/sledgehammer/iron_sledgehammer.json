{
  "format_version": "1.10",
  "minecraft:attachable": {
    "description": {
      "identifier": "true:iron_sledgehammer",
      "materials": {
        "default": "entity_alphatest",
        "enchanted": "entity_alphatest_glint"
      },
      "textures": {
        "default": "textures/entity/hammer/iron",
        "enchanted": "textures/misc/enchanted_item_glint"
      },
      "geometry": {
        "default": "geometry.sledgehammer"
      },
      "animations": {
				"first_person": "animation.hammer.1",
				"default": "animation.hammer.3"
      },
      "scripts": {
        "animate": [
          {
						"first_person": "c.is_first_person && c.item_slot == 'main_hand' && q.get_equipped_item_name == 'iron_sledgehammer'"
					},
					{
						"default": "!c.is_first_person && c.item_slot == 'main_hand' && q.get_equipped_item_name == 'iron_sledgehammer'"
					}
        ]
      },
      "render_controllers": [ "controller.render.item_default" ]
    }
  }
}
