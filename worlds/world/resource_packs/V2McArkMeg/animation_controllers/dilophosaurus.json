{
	"format_version" : "1.10.0",
	"animation_controllers" : {
		"controller.animation.dilophosaurus.general" : {
			"initial_state" : "default",
			"states" : {  
			"default" : {
					"animations" : [
						{
							"idle" : "(variable.attack_time < 0.1) && !query.is_illager_captain"} 
					], 
					"transitions" : [
							{
							"muerto" : "(query.mark_variant == 777)"},
						{
							"attacking" : "variable.attack_time >= 0.1"
						},
						{
							"attacking" : "query.is_illager_captain && (query.is_on_ground) && (query.skin_id != 2)"
						},
						{
							"sitting" : "(query.is_sitting)"},
						{
							"attack2" : "(query.is_on_ground) && query.has_target && (query.skin_id == 2) && query.modified_move_speed < 0.3" 
						},
						{
							"sleep" : "(query.is_sheared) && (!query.is_tamed) && (!query.is_baby)"
						}
					],
					"blend_transition": 0.2
				},
			"sleep" : {
					"animations" : [ 
					    "idle",
					    "sleep" ],
					"transitions" : [
							{
							"muerto" : "(query.mark_variant == 777)"},
						{
							"default" : "(!query.is_sheared)"},
						{
							"default" : "(query.is_tamed)"}
					],
					"blend_transition": 0.2
				},
			"attack2" : {
					"animations" : [ "attack2" 
					],
					"transitions" : [
							{
							"muerto" : "(query.mark_variant == 777)"},
						{
							"sitting" : "(query.is_sitting && query.all_animations_finished)"},
						{
							"sleep" : "(query.is_sheared) && (!query.is_tamed) && (!query.is_baby)"
						},
						{
							"default" : "  (query.all_animations_finished) && query.skin_id != 2"} 
					],
					"blend_transition": 0.2
				},
			"sitting" : {  
					"animations" : [  
						{
							"idle" : "(variable.attack_time < 0.1) && !query.is_illager_captain"},
					    "sitting" ],
					"transitions" : [
							{
							"muerto" : "(query.mark_variant == 777)"},
						{
							"default" : "(!query.is_sitting)"}
					],
					"blend_transition": 0.2
				},
				"attacking" : { 
					"animations" : [
					    "attack" ],
					"transitions" : [
							{
							"muerto" : "(query.mark_variant == 777)"},
						{
							"default" : "variable.attack_time < 0.1 && query.all_animations_finished && !query.is_illager_captain" 
						}, 
						{
							"default" : "(query.is_sheared) && (!query.is_tamed)"
						}
					],  
					"blend_transition": 0.2
				},
			"muerto" : {
					"animations" : [ 
					 
					    "muerto" ],
					"blend_transition": 0.2
				}
			}
		}
	}
} 

 