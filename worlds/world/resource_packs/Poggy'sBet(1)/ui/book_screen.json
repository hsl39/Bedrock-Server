                        }
                    ]
                }
            },
            {
                "locked": {
                    "type": "panel",
                    "$disabled_color|default": "$color",
                    "controls": [
                        {
                            "edit_box_indent@$text_background_default": {
                                "$color": "$disabled_color",
                                "$alpha": "$disabled_alpha"
                            }
                        }
                    ]
                }
            },
            {
                "default@$text_background_default": {}
            },
            {
                "hover@$text_background_hover": {}
