{
	"format_version": "1.21.0",
	"minecraft:feature_rules": {
		"description": {
			"identifier": "better_on_bedrock:tree_rule_glowshroom_feature_rule.json",
			"places_feature": "better_on_bedrock:tree_rule_glowshroom_scatter_feature" /*
			This feature rule runs for every chunk
			It pre-calculates the random numbers used in the voronoi function (biome determinant), which should lead to a noticable preformace improvement (at the cost of some flexibility in biome shape)
			*/
		},
		"conditions": {
			"placement_pass": "surface_pass",
			"minecraft:biome_filter": {
				"all_of": [
					{
						"test": "has_biome_tag",
						"value": "the_end",
						"operator": "equals"
					}
				]
			}
		},
		"distribution": {
			//iterations contains random_generator.molang
			"iterations": "1 && math.abs(v.originx) > 512 || math.abs(v.originz) > 512",
			"x": {
				"distribution": "uniform",
				"extent": [
					0,
					15
				]
			},
			"y": "query.heightmap(variable.worldx, variable.worldz)",
			"z": {
				"distribution": "uniform",
				"extent": [
					0,
					15
				]
			}
		}
	}
}