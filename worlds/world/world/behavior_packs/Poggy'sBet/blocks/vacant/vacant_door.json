{
	"format_version": "1.20.80",
	"minecraft:block": {
		"description": {
			"identifier": "better_on_bedrock:vacant_door",
			"menu_category": {
				"is_hidden_in_commands": false,
				"category": "none"
			},
			"traits": {
				"minecraft:placement_direction": {
					"enabled_states": [ "minecraft:cardinal_direction" ]
				}
			},
			"states": {
				"pog:door_open": [ false, true ],
				"pog:mirrored": [ false, true ],
				"pog:top_bit": [ false, true ]
			}
		},
		"components": {
			"minecraft:custom_components": [ "pog:custom_door" ],
			"minecraft:geometry": {
				"identifier": "geometry.custom_door",
				"bone_visibility": {
					"door_open": "q.block_state('pog:door_open') && !q.block_state('pog:mirrored')",
					"door_closed": "!q.block_state('pog:door_open') && !q.block_state('pog:mirrored')",
					"door_open_mirror": "q.block_state('pog:mirrored') && q.block_state('pog:door_open')",
					"door_closed_mirror": "q.block_state('pog:mirrored') && !q.block_state('pog:door_open')"
				}
			},
			"minecraft:material_instances": {
				"*": {
					"texture": "vacant_door",
					"render_method": "blend",
					"ambient_occlusion": false
				}
			},
			"minecraft:collision_box": {
				"origin": [ -8, 0, -8 ],
				"size": [ 16, 16, 3 ]
			},
			"minecraft:selection_box": {
				"origin": [ -8, 0, -8 ],
				"size": [ 16, 16, 3 ]
			},
			"minecraft:placement_filter": {
				"conditions": [
					{
						"allowed_faces": [ "up" ]
					}
				]
			},
			"minecraft:map_color": "#5f4a2b",
			"minecraft:loot": "loot_tables/empty.json",
			"minecraft:destructible_by_mining": {
				"seconds_to_destroy": 0.4
			},
			"minecraft:destructible_by_explosion": {
				"explosion_resistance": 15
			},
			"minecraft:flammable": {
				"destroy_chance_modifier": 20,
				"catch_chance_modifier": 5
			},
			"minecraft:tick": {
				"interval_range": [ 1, 2 ]
			},
			
			"tag:wood": {}
		},
		"permutations": [
			{
				"condition": "q.block_state('pog:top_bit')",
				"components": {
					"minecraft:loot": "loot_tables/blocks/vacant_door_item.item.loottable.json",
					"minecraft:placement_filter": {
                        "conditions": [
                            {
                                "allowed_faces": [ "up" ],
                                "block_filter": [ "better_on_bedrock:vacant_door" ]
                            }
                        ]
                    },
					"minecraft:material_instances": {
						"*": {
							"texture": "vacant_door_open",
							"render_method": "blend",
							"ambient_occlusion": false
						}
					}
				}
			},
			{
				"condition": "q.block_state('pog:door_open')",
				"components": {
					"minecraft:collision_box": {
						"origin": [ -8, 0, -8 ],
						"size": [ 3, 16, 16 ]
					},
					"minecraft:selection_box": {
						"origin": [ -8, 0, -8 ],
						"size": [ 3, 16, 16 ]
					}
				}
			},
			{
				"condition": "q.block_state('pog:mirrored') && q.block_state('pog:door_open')",
				"components": {
					"minecraft:collision_box": {
						"origin": [ 5, 0, -8 ],
						"size": [ 3, 16, 16 ]
					},
					"minecraft:selection_box": {
						"origin": [ 5, 0, -8 ],
						"size": [ 3, 16, 16 ]
					}
				}
			},

			{
				"condition": "q.block_state('minecraft:cardinal_direction') == 'north'",
				"components": {
					"minecraft:transformation": {
						"rotation": [ 0, 180, 0 ]
					}
				}
			},
			{
				"condition": "q.block_state('minecraft:cardinal_direction') == 'south'",
				"components": {
					"minecraft:transformation": {
						"rotation": [ 0, 0, 0 ]
					}
				}
			},
			{
				"condition": "q.block_state('minecraft:cardinal_direction') == 'east'",
				"components": {
					"minecraft:transformation": {
						"rotation": [ 0, 90, 0 ]
					}
				}
			},
			{
				"condition": "q.block_state('minecraft:cardinal_direction') == 'west'",
				"components": {
					"minecraft:transformation": {
						"rotation": [ 0, 270, 0 ]
					}
				}
			}
		]
	}
}